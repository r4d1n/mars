{
    "env": {
        "browser": true,
        "es6": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "warn",
            "never"
        ]
    },
    "parserOptions": {
      "sourceType": "module"
    }
}
